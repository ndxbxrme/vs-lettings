@import '../../variables'
.advance-progression
  box-sizing border-box
  padding 0 2rem
  h1, h2
    text-align center
  h1
    margin-bottom 0px
  h2
    margin-top 5px
    color vs-orange
    font-weight 600
  .form-item
    display flex
    label
      flex 1
    .input, input, .CodeMirror
      flex 3
      margin-bottom 1rem
    .CodeMirror
      max-height 160px
      border 1px solid vs-lightgrey
      border-radius 3px
  .button
    vs-button()
    background vs-orange
    color white
    float right
    margin-bottom 20px