.dashboard-route
  h1 Dashboard
  .overview
    .thead
      .tr
        .th(colspan='2') Overview of live cases
    .tbody
      .tr.head-two
        .td Status
        .td Sale Position
      .tr.available-props
        .td 
          a(href='/available') Available Properties
        .td {{available.total}}
      .tr(ng-repeat='di in items = (dashboard.items | filter:{type:"overview"})')
        .td {{di.name}}
        .td.clickable(ng-click='showInfo("count", di, month)') {{count(di)}}
      .tr.total
        .td Total
        .td {{total(items)}}
  .progressions(ng-show='properties.total')
    h2 Progression
    table.summary
      thead
        tr
          th
          th Service Level
          th 
            a(href='', ng-click='sortType = "Tenant.Addresses[0].CreatedDate"; sortReverse = !sortReverse') DOA
              span.far.fa-sort-down(ng-show="sortType == 'name' && !sortReverse")
              span.far.fa-sort-up(ng-show="sortType == 'name' && sortReverse")
          th Move In (est)
          th(ng-repeat='milestone in properties.items[0].progressions[0].milestones') {{milestone[0].title}}
      tbody(ng-repeat='property in properties.items')
        tr
          td 
            a(ui-sref='case({roleId:property.RoleId})') {{property.Address.Number}} {{property.Address.Street}}
          td {{property.ServiceLevel.Name}}
          td {{property.Tenant.Addresses[0].CreatedDate | date:'MMM d, yyyy'}}
          td {{property.proposedMoving | date:'MMM d, yyyy'}}
          td(ng-repeat='milestone in property.progressions[0].milestones')
            i.fal(ng-class='milestone[0].completed ? "fa-check" : "fa-times"')
  